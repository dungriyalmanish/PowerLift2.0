<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Today"
    tools:showIn="@layout/activity_today">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/t_ex1_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:cardElevation="2dp">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/t_ex1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="BP"
                    android:textSize="@dimen/heading"
                    app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/t_ex1_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/t_ex1_text"
                    app:layout_constraintVertical_bias="0.0">

                    <ImageButton
                        android:id="@+id/t_ex1_set1"
                        android:layout_width="@dimen/tick_view_dimen"
                        android:layout_height="@dimen/tick_view_dimen"
                        android:layout_margin="@dimen/stroke_size"
                        android:background="@drawable/round_back" />

                    <ImageButton
                        android:id="@+id/t_ex1_set2"
                        android:layout_width="@dimen/tick_view_dimen"
                        android:layout_height="@dimen/tick_view_dimen"
                        android:layout_margin="@dimen/stroke_size"
                        android:background="@drawable/round_back" />

                    <ImageButton
                        android:id="@+id/t_ex1_s3"
                        android:layout_width="@dimen/tick_view_dimen"
                        android:layout_height="@dimen/tick_view_dimen"
                        android:layout_margin="@dimen/stroke_size"
                        android:background="@drawable/round_back" />

                    <ImageButton
                        android:id="@+id/t_ex1_s4"
                        android:layout_width="@dimen/tick_view_dimen"
                        android:layout_height="@dimen/tick_view_dimen"
                        android:layout_margin="@dimen/stroke_size"
                        android:background="@drawable/round_back" />

                    <ImageButton
                        android:id="@+id/t_ex1_s5"
                        android:layout_width="@dimen/tick_view_dimen"
                        android:layout_height="@dimen/tick_view_dimen"
                        android:layout_margin="@dimen/stroke_size"
                        android:background="@drawable/round_back" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/t_ex1_supp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/support_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/t_ex1_ll"
                    app:layout_constraintVertical_bias="0.0" />

                <CheckBox
                    android:id="@+id/t_ex1_satisfy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/satisfy_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/t_ex1_supp"
                    app:layout_constraintVertical_bias="0.0" />

                <CheckBox
                    android:id="@+id/t_ex1_repeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/repeat_info"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/t_ex1_satisfy"
                    app:layout_constraintVertical_bias="0.0" />

                <android.support.design.widget.TextInputLayout

                    android:id="@+id/t_ex1_textview1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="Todays weight"
                    app:boxBackgroundMode="outline"
                    app:boxStrokeColor="@color/colorAccent"
                    app:boxStrokeWidth="@dimen/stroke_size"
                    app:layout_constraintBottom_toTopOf="@+id/t_ex1_ll"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@id/t_ex1_text"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/t_ex1_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25kg"
                        android:textSize="@dimen/weight_text" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/t_ex1_btn_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:enabled="false"
                    android:text="Done"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/t_ex1_satisfy"
                    app:layout_constraintTop_toBottomOf="@+id/t_ex1_textview1"
                    app:layout_constraintVertical_bias="1.0" />


            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
